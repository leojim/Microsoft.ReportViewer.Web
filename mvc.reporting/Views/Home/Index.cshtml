    </div>
    <div class="col-md-4">
        <h2>ReportViewer: WORD</h2>
        <p><a class="btn btn-default" href="@Url.Action("Report", "Home", new { reportType = "word", download = true })">Download &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>ReportViewer: EXCEL</h2>
        <p><a class="btn btn-default" href="@Url.Action("Report", "Home", new { reportType = "excel", download = true })">Download &raquo;</a></p>
    </div>
